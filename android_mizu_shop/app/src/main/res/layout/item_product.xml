<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:contentDescription="Ảnh sản phẩm" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:text="Danh mục"
            android:textSize="13sp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductCategory"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:text="Giá: 0đ"
            android:textSize="14sp"
            android:textColor="#1976D2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProductStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductPrice"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:text="Còn hàng"
            android:textSize="13sp"
            android:textColor="#388E3C" />

        <TextView
            android:id="@+id/tvProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductStock"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:text="Số lượng: 0"
            android:textSize="13sp"
            android:textColor="#888" />

        <TextView
            android:id="@+id/tvProductActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductQuantity"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:text="Đang hoạt động"
            android:textSize="13sp"
            android:textColor="#388E3C" />

        <ImageView
            android:id="@+id/btnEditProduct"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Sửa" />

        <ImageView
            android:id="@+id/btnDeleteProduct"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/btnEditProduct"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Xóa" />

    </RelativeLayout>
</androidx.cardview.widget.CardView> 